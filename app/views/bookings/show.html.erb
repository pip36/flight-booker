<nav class="navbar navbar-inverse">
  <h1> Your Booking </h1>
</nav>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2> Your Flight Details </h2>
      <ul>
        <li> From: <%= @flight.from_airport.name %> </li>
        <li> To: <%= @flight.to_airport.name %> </li>
        <li> Departure Date: <%= @flight.date.strftime("%F") %> </li>
        <li> Departure Time: <%= @flight.time.strftime("%T") %> </li>
        <li> Flight Time: <%= @flight.flight_duration.round(2) %> </li>
      </ul>
      <p> For <%= @booking.passengers.count %> passengers </p>
      <% @booking.passengers.each_with_index do |passenger, i| %>
        <p> <u><%= (i+1).ordinalize %> Passenger</u> </p>
        <p> <strong>name:</strong> <%= passenger.name %> </p>
        <p> <strong>email:</strong> <%= passenger.email %> </p>
      <% end %>
      <h3> Thanks for booking! </h3>
    </div>
  </div>
</div>
